<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ChatImage2"
            android:layout_width="62dp"
            android:layout_height="61dp"
            app:layout_constraintBottom_toBottomOf="@+id/ChatImage"
            app:layout_constraintEnd_toEndOf="@+id/ChatImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ChatImage"
            app:layout_constraintTop_toTopOf="@+id/ChatImage"
            app:layout_constraintVertical_bias="0.116"
            app:srcCompat="@drawable/image_5" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ChatImage"
            android:layout_width="62dp"
            android:layout_height="61dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/image_5" />

        <TextView
            android:id="@+id/chatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="John Cooper"
            android:textColor="#147177"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ChatImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ChatImage"
            app:layout_constraintTop_toTopOf="@+id/ChatImage"
            app:layout_constraintVertical_bias="0.23000002" />

        <TextView
            android:id="@+id/MessageChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="1 New Message"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/ChatImage"
            app:layout_constraintEnd_toEndOf="@+id/chatName"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintStart_toStartOf="@+id/chatName"
            app:layout_constraintTop_toBottomOf="@+id/chatName"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ChatImage2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/line_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>